@model FairShare.Web.Models.Group
@{
    ViewData["Title"] = "Group Details";
}
<h2>@Model.Name</h2>
<p>@Model.Description</p>
<h4 class="mt-4">Members (@(Model.Members?.Count ?? 0))</h4>
<ul>
@foreach (var m in Model.Members ?? new List<FairShare.Web.Models.GroupMember>())
{
  <li>@m.User?.Name</li>
}
</ul>
<h4 class="mt-3">Expenses (@(Model.Expenses?.Count ?? 0))</h4>
<ul>
@foreach (var e in Model.Expenses ?? new List<FairShare.Web.Models.Expense>())
{
  <li>@e.Description - @e.Amount.ToString("C")</li>
}
</ul>
<a asp-action="Index" class="btn btn-link">Back</a>
