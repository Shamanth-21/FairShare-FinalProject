@model FairShare.Web.Models.Expense
@{
    ViewData["Title"] = "Create Expense";
}
<h2>Create Expense</h2>
<form asp-action="Create" method="post" class="mt-3 row g-3">
  <div class="col-md-8">
    <label asp-for="Description" class="form-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>
  <div class="col-md-4">
    <label asp-for="Amount" class="form-label"></label>
    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
    <span asp-validation-for="Amount" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label class="form-label">Group</label>
    <select asp-for="GroupId" class="form-select" asp-items="ViewBag.Groups"></select>
  </div>
  <div class="col-md-6">
    <label class="form-label">Paid By</label>
    <select asp-for="PaidByUserId" class="form-select" asp-items="ViewBag.Users"></select>
  </div>
  <div class="col-md-6">
    <label asp-for="SpentOnUtc" class="form-label"></label>
    <input asp-for="SpentOnUtc" class="form-control" type="date" />
    <span asp-validation-for="SpentOnUtc" class="text-danger"></span>
  </div>
  <div class="col-12">
    <button class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
  </div>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
