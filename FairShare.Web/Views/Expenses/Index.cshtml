@model IEnumerable<FairShare.Web.Models.Expense>
@{
    ViewData["Title"] = "Expenses";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Expenses</h2>
  <a class="btn btn-primary" asp-action="Create">Add Expense</a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th><th>Amount</th><th>Group</th><th>Paid By</th><th>Date</th><th></th>
    </tr>
  </thead>
  <tbody>
@foreach (var e in Model)
{
  <tr>
    <td>@e.Description</td>
    <td>@e.Amount.ToString("C")</td>
    <td>@e.Group?.Name</td>
    <td>@e.PaidByUser?.Name</td>
    <td>@e.SpentOnUtc.ToShortDateString()</td>
    <td class="text-end">
      <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@e.Id">Details</a>
      <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
      <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@e.Id">Delete</a>
    </td>
  </tr>
}
  </tbody>
</table>
